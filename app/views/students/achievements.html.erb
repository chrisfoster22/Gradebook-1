<h1>Edit Achievements for <%= @student.name %></h1>

<%= form_tag update_achievements_students_path(@student) do %>
  <ul>
    <% @achievements.each do |t| %>
      <li>
        <%= check_box_tag "achievements[#{t.id}]", true, @student.tags.include?(t) %>
        <%= t.name %>
      </li>
    <% end %>
  </ul>

  <%= submit_tag "Save Achievements" %>
<% end %>
